<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="Settings"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtitle Setting"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar_settings"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/edit_txt_sub"
        android:layout_width="310dp"
        android:layout_height="38dp"
        android:background="@drawable/cover_edit_text"
        android:hint="+1"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sub" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_animation"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="OK"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/edit_txt_sub"
        app:layout_constraintTop_toBottomOf="@+id/txt_sub"
        android:background="@drawable/cover_button"/>

    <TextView
        android:id="@+id/txt_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wooden Fish Affect"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_sub"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_effect"
        android:background="@drawable/cover_grid">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/pic_wooden_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/wooden" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/pic_wooden_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/wooden2" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/pic_wooden_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/wooden3" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/pic_wooden_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/wooden4" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/pic_wooden_5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/wooden5" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/pic_wooden_6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/wooden6" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView
        android:id="@+id/txt_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wooden Fish Sound"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/grid"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/cover_grid"/>

    <Switch
        android:id="@+id/musicSw"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:checked="true"
        android:textOff="OFF"
        android:textOn="ON"
        app:layout_constraintEnd_toEndOf="@+id/txt_sound"
        app:layout_constraintTop_toBottomOf="@+id/grid"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="@+id/txt_sound"/>

    <TextView
        android:id="@+id/txt_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music switch"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_sound"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/none_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/cover_button"
        android:text="None"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_music"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choose_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/cover_button"
        android:paddingHorizontal="20dp"
        android:text="Choose music"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_music" />

    <TextView
        android:id="@+id/txt_vib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vibration"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/none_music"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/cover_grid"/>

    <Switch
        android:id="@+id/Vibration"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:checked="false"
        android:textOff="OFF"
        android:textOn="ON"
        app:layout_constraintEnd_toEndOf="@+id/txt_vib"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="@+id/txt_vib"
        app:layout_constraintTop_toBottomOf="@+id/none_music" />

</androidx.constraintlayout.widget.ConstraintLayout>